<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="@PKG_ADDON_ID@"
       name="@ADDON_NAME@"
       version="@ADDON_VERSION@"
       provider-name="@PROVIDER_NAME@">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
@REQUIRES@
  </requires>
  <extension point="xbmc.service" library="default.py">
    <provides>@PKG_ADDON_PROVIDES@</provides>
  </extension>
  <extension point="xbmc.python.script" library="download.py">
    <provides>@PKG_ADDON_PROVIDES@</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">@PKG_SHORTDESC@</summary>
    <description lang="en">@PKG_LONGDESC@</description>
    <summary lang="es">@PKG_SHORTDESC_ES@</summary>
    <description lang="es">@PKG_LONGDESC_ES@</description>
    <disclaimer>@PKG_DISCLAIMER@</disclaimer>
    <platform>all</platform>
    <news>
@PKG_ADDON_NEWS@
    </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
@PKG_ADDON_SCREENSHOT@
    </assets>
  </extension>
</addon>
